#!/bin/bash

# Install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Get the hostname of the server
HOSTNAME=$(hostname)

# Define the student ID
STUDENT_ID="678476842"

# Create Nginx configuration file for custom header
echo "add_header X-Served-By $STUDENT_ID-web-01;" | sudo tee /etc/nginx/conf.d/0-custom-header

# Reload Nginx to apply the changes
sudo systemctl reload nginx

# Verify the configuration
curl -sI http://localhost | grep X-Served-By

# Display a message indicating success
echo "Nginx has been configured with the custom header on $HOSTNAME"

